        <ActionBar title="Progetto MytiluSE UniParthenope" flat="true" />
    </Page.actionBar>

    <StackLayout orientation="vertical" horizontalAlignment="center"
        verticalAlignment="center" margin="10 10 10 10">
        <Image src="~/images/Logo_Parthenope.png" width="175" />
        <TextView editable="false" textAlignment="center" fontSize="14">
