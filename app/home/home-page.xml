<Page loaded="pageLoaded" class="page" xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:sd="nativescript-ui-sidedrawer">
    <Page.actionBar>
        <ActionBar title="Progetto MytiluSE UniParthenope" flat="true">
            <ActionItem tap="onTapLog"
                        ios.position = "right"
                        text="{{ login_status }}" android.position="popup"></ActionItem>
            <ActionItem tap="onTapAbout"
                        ios.position = "right"
                        text="About" android.position="popup"></ActionItem>
        </ActionBar>
    </Page.actionBar>
    <ScrollView orientation="vertical">
    <StackLayout orientation="vertical" horizontalAlignment="center"
                 verticalAlignment="center" margin="10 10 10 10">
        <Image src="~/images/logo_mytiluse.png" marginBottom="25"/>
        <Label text="{{ policy }}" textWrap="true" fontSize="13" textAlignment="center"/>

        <Button textWrap="true"  class="button1" text="CLICCA PER PROSEGUIRE" tap="onTap" marginTop="10"/>

    </StackLayout>
    </ScrollView>
</Page>