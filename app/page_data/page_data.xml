<Page loaded="pageLoaded" class="page" xmlns="http://www.nativescript.org/tns.xsd">
	<Page.actionBar>
		<ActionBar title="Ricerca data" flat="true">
			<NavigationButton text="Indietro"></NavigationButton>
		</ActionBar>
	</Page.actionBar>

	<ScrollView>
	<StackLayout class="home-panel">
		<!--Add your page content here-->
		<Label text="Seleziona data:" />
		<DatePicker id="datePicker" loaded="onDatePickerLoaded" date="{{ date_pick }}" minDate="{{ minDate }}" maxDate="{{ maxDate }}"></DatePicker>
		<Label text="Seleziona ora (UTC):" />
		<ListPicker class="list_picker" id="hours_search" items="{{ listPickerHour }}" selectedIndex="12" />
		<Button class="button1" text="CERCA" tap="onTap" />
	</StackLayout>
	</ScrollView>
</Page>