<Page loaded="pageLoaded" class="page" xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:sd="nativescript-ui-sidedrawer">
    <Page.actionBar>
        <ActionBar title="Login" flat="true"></ActionBar>

    </Page.actionBar>
    <ScrollView orientation="vertical" verticalAlignment="center">

            <StackLayout class="home-panel" verticalAlignment="top">
                <Image src="~/images/logo_mytiluse.png" marginBottom="45"></Image>

                <StackLayout class="input-field" verticalAlignment="middle">
                    <TextField class="input" hint="Username" autocorrect="false" autocapitalizationType="none" id="username" marginBottom="15"></TextField>
                    <TextField class="input" hint="Password" secure="true" id="password"></TextField>
                </StackLayout>


                <StackLayout verticalAlignment="bottom">
                    <Button text="LOGIN" class="button1" tap="OnTapLogin" marginBottom="10"></Button>
                    <Label text="Password dimenticata?" class="login-label" tap="resetAccount"></Label>
                </StackLayout>
            </StackLayout>


    </ScrollView>
</Page>