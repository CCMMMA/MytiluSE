<Page loaded="pageLoaded" class="page" xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:sd="nativescript-ui-sidedrawer">
    <Page.actionBar>
        <ActionBar title="Login" flat="true"></ActionBar>

    </Page.actionBar>
    <ScrollView orientation="vertical" verticalAlignment="center">

            <StackLayout class="home-panel">
                <Image src="~/images/logo_mytiluse.png" marginBottom="75"></Image>

                <StackLayout class="input-field">
                    <TextField class="input" hint="Username" autocorrect="false" autocapitalizationType="none" id="username"></TextField>
                    <StackLayout class="hr-light"></StackLayout>
                </StackLayout>

                <StackLayout class="input-field" marginBottom="50">
                    <TextField class="input" hint="Password" secure="true" id="password"></TextField>
                    <StackLayout class="hr-light"></StackLayout>
                </StackLayout>

                <StackLayout >
                    <Button text="LOGIN" class="button1" tap="OnTapLogin" marginBottom="10"></Button>
                    <Label text="Password dimenticata?" class="login-label"></Label>
                </StackLayout>
            </StackLayout>


    </ScrollView>
</Page>